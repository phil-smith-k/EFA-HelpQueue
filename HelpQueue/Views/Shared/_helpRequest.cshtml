@model HelpQueue.Models.Questions.QuestionCreate

@{
    ViewBag.RequestModal = $"RequestModal";
    ViewBag.RequestBtn = $"CommentEditbtn";
}

<div>
    <fieldset>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <button id="@Html.Raw(ViewBag.RequestBtn)" type="button" class="btn btn-sm btn-danger pull-right button button4">
                        Request Help
                    </button>

                    <div class="modal fade" tabindex="-1" id="@Html.Raw(ViewBag.RequestModal)" data-keyboard="true" data-backdrop="static">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">
                                        ×
                                    </button>
                                    <h4>Request Help</h4>
                                </div>
                                <div class="modal-body">
                                    @using (Html.BeginForm("Create", "Question", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(model => model.CohortId)

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", style = "width:100%;" })
                                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                        <div class="form-group">
                                            <div style="text-align: right;">
                                                <input type="submit" value="Submit Request" class="btn btn-default" />
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(@Html.Raw(ViewBag.RequestBtn)).click(function () {
            $(@Html.Raw(ViewBag.RequestModal)).modal('show');
        });
    });
</script>